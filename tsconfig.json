{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": false,
    "esModuleInterop": true,
    "importHelpers": true,
    "jsx": "react",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "strict": true,
    "typeRoots": ["node_modules/@types"],
    "types": [
      "node",
      "cheerio",
      "@docusaurus/module-type-aliases",
      "vitest/globals"
    ],
    "outDir": "./dist"
  },
  "exclude": [
    "./dist",
    "./scripts",
    "**/__fixtures__/**/*",
    "**/__mocks__/**/*",
    "**/__tests__/**/*",
    "**/*.test.ts"
  ]
}
